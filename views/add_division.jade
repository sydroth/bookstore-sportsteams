doctype html
html(lang="en")
  head
    link(href='styles.css')
    link(href='index.js')
    script(type='text/javascript').

  body
    .jumbotron
      .container
        h1 Create/Edit division 
        if loggedIn
          p 
            a.btn(href='#', role='button') Manage Additions »
        else
          p
            a.btn(href='#', role='button') Login »

    form(action='/search')
      input(type='text', name='Search', placeholder='Search')
      input(type='submit', value='Submit')

    .container.col3
      each division in divisions
        .panel.dropdown(class="home_panel")
          h3= division.abbreviation
            p 
              a.btn(href='/divisions/id/#{division.id}') #{division.name}

    .container
      form(action='/divisions' method='post')
        div
          input(class='enter-text', type='text', name='name', placeholder='National Hockey League')
        div
          input(class='enter-text', type='text', name='abbreviation', placeholder='NHL')
        div
          input(type='submit', value='Submit' )
    